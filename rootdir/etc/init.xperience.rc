# allows Kernel Manager for Franco Kernel  to know this feature is supported
setprop fku.profiles 1

# scheduler tuning
on init
    # boottime stune
    write /dev/stune/schedtune.prefer_idle 1
    write /dev/stune/schedtune.boost 100
    # or just disable EAS during boot
    write /sys/kernel/debug/sched_features NO_ENERGY_AWARE

    on property:sys.boot_completed=1
    # reset stune
    write /dev/stune/schedtune.prefer_idle 0
    write /dev/stune/schedtune.boost 0
    # Re-Enable EAS if exist
    write /sys/kernel/debug/sched_features ENERGY_AWARE

    # ZRAM comfiguration
    write /sys/block/zram0/comp_algorithm zstd
    write /sys/block/zram0/max_comp_streams 8

    #set permissions
    # cpu
    chmod 0664 /sys/devices/system/cpu/cpu0/cpufreq/scaling_max_freq
    chmod 0664 /sys/devices/system/cpu/cpu0/cpufreq/scaling_min_freq
    chmod 0664 /sys/devices/system/cpu/cpu0/cpufreq/scaling_governor
    chmod 0664 /sys/devices/system/cpu/cpu4/cpufreq/scaling_max_freq
    chmod 0664 /sys/devices/system/cpu/cpu4/cpufreq/scaling_min_freq
    chmod 0664 /sys/devices/system/cpu/cpu4/cpufreq/scaling_governor

# Power saving profile
on property:fku.perf.profile=0
    write /sys/devices/system/cpu/cpu0/cpufreq/scaling_max_freq 1536000
    write /sys/devices/system/cpu/cpu4/cpufreq/scaling_max_freq 1958400
    write /sys/class/kgsl/kgsl-3d0/devfreq/governor powersave
    write /sys/class/leds/lcd-backlight/max_brightness 1397

# Balance (FK defaults)
on property:fku.perf.profile=1
    write /sys/devices/system/cpu/cpu0/cpufreq/scaling_max_freq 1747200
    write /sys/devices/system/cpu/cpu4/cpufreq/scaling_max_freq 2150400
    write /sys/class/kgsl/kgsl-3d0/devfreq/governor msm-adreno-tz
    write /sys/class/leds/lcd-backlight/max_brightness 4095

# Performance
on property:fku.perf.profile=2
    write /sys/devices/system/cpu/cpu0/cpufreq/scaling_max_freq 1843200
    write /sys/devices/system/cpu/cpu4/cpufreq/scaling_max_freq 2208000
    write /sys/class/kgsl/kgsl-3d0/devfreq/governor performance
    write /sys/class/leds/lcd-backlight/max_brightness 4095
